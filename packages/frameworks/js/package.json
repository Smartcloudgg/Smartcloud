{
  "name": "@videndum/smartcloudjs",
  "version": "0.0.1",
  "description": "Smartcloud Discord Container",
  "author": "Jonathan Stevens <jonathan@videndum.studio>",
  "homepage": "https://smartcloud.gg/packages/js",
  "license": "GPL-3.0-or-later",
  "source": "src/index.ts",
  "main": "./lib/index.js",
  "engines": {
    "node": ">=10"
  },
  "files": ["lib"],
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Videndum/smartcloud.git"
  },
  "scripts": {
    "start": "yarn i18n && yarn prettier-standard --changed && tsc && node lib/index.js",
    "i18n": "sync-i18n --files './locales/*.json' --primary en --languages es ja fr it en zh ko en-GB en-US de-CH zh-Hant zh-Hans --space 2 --le LF --fn true -e true",
    "check-i18n": "npm run i18n -- --check",
    "release": "standard-version",
    "prerelease": "standard-version --prerelease"
  },
  "dependencies": {
    "@sentry/node": "^5.18.1",
    "aws-amplify": "^3.0.24",
    "chalk": "^4.1.0",
    "discord.js": "^12.3.1",
    "i18next": "^19.5.2",
    "i18next-fs-backend": "^1.0.7",
    "stellar-sdk": "^5.0.4"
  },
  "devDependencies": {
    "@overnightjs/core": "^1.7.4",
    "@types/fs-extra": "^9.0.1",
    "@types/node": "^14.0.14",
    "eslint-plugin-i18next": "^4.5.0",
    "i18next-json-sync": "^2.3.1",
    "prettier-plugin-organize-imports": "^1.1.1",
    "prettier-plugin-pkg": "^0.8.0",
    "prettier-standard": "^16.4.1",
    "standard-version": "^8.0.0",
    "tslint": "^6.1.0",
    "typescript": "^3.9.5"
  },
  "nodemonConfig": {
    "ignore": ["logs"]
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
